{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Alias path */
    "baseUrl": "src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/components/common/*": ["components/common/*"],
      "@/assets/*": ["assets/*"],
      "@/features/*": ["features/*"],
      "@/layouts/*": ["layouts/*"],
      "@/contexts/*": ["contexts/*"],
      "@/services/*": ["services/*"],
      "@/constants/*": ["constants/*"],
      "@/helpers/*": ["helpers/*"],
      "@/pages/*": ["pages/*"],
      "@/interface/*": ["interface/*"],
      "@/mocks/*": ["mocks/*"],
      "@/hooks/*": ["hooks/*"],
      "@/reducers/*": ["reducers/*"]
    },
    "incremental": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx"]
}
